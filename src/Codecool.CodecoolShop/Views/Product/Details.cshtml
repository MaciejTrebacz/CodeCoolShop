@model Codecool.CodecoolShop.Models.Products.Product

@{
    ViewData["Title"] = Model.Name;
}

<h1>@Model.Name</h1>

<div>
    <hr />
    <img src="/img/@(Model.Image).jpg" style="height: 20%; width: 20%;">
    <br/><br/>
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ProductCategory)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ProductCategory)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Currency)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Currency)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.DefaultPrice)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DefaultPrice)
        </dd>
    </dl>
</div>

<a type="button" class="btn btn-primary" style="float: bottom" asp-controller="Cart" asp-action="AddToCart" asp-route-productId="@Model.Id">Add To Cart</a>

<br/><br/>

<div>
    <a asp-action="Index">Back to List</a>
</div>
